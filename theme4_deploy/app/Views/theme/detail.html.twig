{% extends 'base.html.twig' %}
{% block title %}
    {{ theme.name }}
{% endblock %}
{% block body %}
<main>

    <section class="hero is-primary is-bold">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    {{ theme.name | raw }}
                </h1>
            </div>
        </div>
    </section>

    {% if user %}
        <section class="section">
            <div class="container">
                <form action="{{ route('article_create', {'themeSlug': theme.slug }) }}" method="post" class="app-create-article">
                    <div class="field">
                        <label for="title" class="label">
                            Le titre
                        </label>
                        <div class="control">
                            <input id="title" name="title" type="text" placeholder="Le titre" class="input" required>
                        </div>
                    </div>
                    <div class="field">
                        <label for="body" class="label">
                            Le corps
                        </label>
                        <div class="control">
                            <textarea name="body" id="body" placeholder="Le corps" class="textarea" required></textarea>
                        </div>
                    </div>
                    <div class="field">
                        <label for="slug" class="label">
                            La limace
                        </label>
                        <div class="control">
                            <input id="slug" name="slug" type="text" placeholder="La limace" class="input" required>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <button class="button is-success" type="submit">Cr√©er l'article</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    {% endif %}

    <div class="app-article-template" style="display: none">
        {% include 'article/article.html.twig' %}
    </div>

    <section class="section">
        <div class="container app-articles">
            {% for article in article_list %}
                {% include 'article/article.html.twig' %}
            {% endfor %}
        </div>
    </section>

</main>
{% endblock %}
