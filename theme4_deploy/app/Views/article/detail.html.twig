{% extends 'base.html.twig' %}


{% block nav_items %}
    <a class="navbar-item" href="{{ route('theme_detail', {'themeSlug': theme.slug}) }}">
        Назад к {{ theme.name }}
    </a>
{% endblock %}

{% block body %}
<main>
    <section class="hero is-primary">
        <div class="hero-body">
            <div class="container">
                <h1 class="title app-title">
                    {{ article.title | raw }}
                </h1>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="container">
            <div class="content app-body">
                {{ article.body | raw }}
            </div>
        </div>
    </section>

    {% if user %}
        <section class="section">
            <div class="container">
                <form action="{{ route('article_update', {'themeSlug': theme.slug, 'articleSlug': article.slug}) }}" method="post" class="app-update">
                    <div class="field">
                        <label for="title" class="label">Le nouveau titre</label>
                        <div class="control">
                            <input id="title" type="text" name="title" placeholder="Le nouveau titre" class="input" required>
                        </div>
                    </div>
                    <div class="field">
                        <label for="body" class="label">Le nouveau corps</label>
                        <div class="control">
                            <textarea id="body" class="textarea" name="body"></textarea>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <button class="button is-link app-update">Modifier</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    {% endif %}
</main>
{% endblock %}
